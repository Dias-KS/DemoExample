<Page x:Class="Namordnik.Views.Pages.MainViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Namordnik.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1080"
      Title="Меню">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Style="{StaticResource ResourceKey=StyleButtonFunction}"
                    Content="Продукты"
                    Click="ProductButtonNext_Click"/>
            <Button Style="{StaticResource ResourceKey=StyleButtonFunction}"
                    Content="Материалы"
                    Click="MaterialButton_Click"
                    Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
